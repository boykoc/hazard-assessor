<%= form_for(@hazard) do |f| %>
  <% if @hazard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@hazard.errors.count, "error") %> prohibited this hazard from being saved:</h2>

      <ul>
      <% @hazard.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_area :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :exposure %><br>
    <%= f.select(:exposure, options_for_select(
      [
        ['Continuous', 1],
        ['Frequent (daily)', 2],
        ['Occasional (Once per week)', 3],
        ['Unusual (one per month)', 4],
        ['Rare (few per year)', 5],
        ['Very Rare (yearly or less)', 6]
      ], 3) 
    ) %>
  </div>
  <div class="field">
    <%= f.label :occurance %><br>
    <%= f.select(:occurance, options_for_select(
      [
        ['Very Likely (has happened/is happening)', 1],
        ['Likely (probably â€“ it could happen)', 2],
        ['Rare (seldom but possible)', 3],
        ['Very rare (very seldom, but possible)', 4],
        ['Very unlikely (slight possibility)', 5],
        ['Practically impossible', 6]
      ], 3) 
    ) %>
  </div>
  <div class="field">
    <%= f.label :consequence %><br>
    <%= f.select(:consequence, options_for_select(
      [
        ['Fatality or permanent disability, significant loss', 1],
        ['Serious injury or illness with lost time or other loss', 2],
        ['Moderate injury or illness with lost time or other loss', 3],
        ['Minor injury or illness without lost time or other loss', 4],
        ['No injury or illness, lost time or other loss', 5]
      ], 3) 
    ) %>
  </div>
  <div class="field">
    <%= f.label :control %><br>
    <%= f.text_area :control %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
