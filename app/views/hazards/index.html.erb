<p class="navbar-text navbar-right">
  <%= link_to 'New Hazard', new_assessment_hazard_path(@assessment) %> |
  <%= link_to 'Back', assessments_path %>
</p>

<h1><%= @assessment.name %> Hazards<small> for <%= @assessment.workplace %></small></h1>
<small><%= l(@assessment.created_at, format: '%b %d, %Y') %></small>
<p><%= @assessment.description %></p>
<br>
<div class="list-group">
  <% @hazards.each do |hazard| %>
    <a href='<%= assessment_hazard_path(@assessment, hazard.id) %>' class="list-group-item"> 
      <h2 class="list-group-item-heading"><%= hazard.name %></h2>
      <p class="list-group-item-text"><span class="lead"><%= hazard.rating %> - </span><%= hazard.description %></p>
    </a>
  <% end %>
</div>
